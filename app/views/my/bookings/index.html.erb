<%# This is a the data that will be used for the dasboard "menu" navbar  %>
<%= render 'my/menu' %>
<div class="container mt-4">
  <div class="d-flex justify-content-around">
    <div class="bookings-card p-2">
      <div class="text-center border-bottom pb-1 mb-4">
        <h2 class="pt-3">Next Lesson</h2>
      </div>
      <div class="booking">
        <% if @upcoming_booking %>
          <div class="d-flex justify-content-between border-bottom p-3 text-center">
            <div class="ml-3">
              <img class="avatar-next-lesson mb-2" src=<%= @upcoming_booking.user.image %>>
              <h4><strong><%= @upcoming_booking.user.first_name %></strong></h4>
            </div>

            <div class="text-center mr-3 position-relative">
              <%= image_tag "coach.png", :class => "booking-coach" %>
              <img class="avatar-next-lesson" src=<%= @upcoming_booking.lesson.user.image %>>
              <h4><strong><%= @upcoming_booking.lesson.user.first_name %></strong></h4>
            </div>
          </div>

          <div class="upcoming-booking-info mt-5 mx-5 text-center">
            <h3><%= @upcoming_booking.lesson.industry.capitalize %> Interview</h3>
            <h5><%= @upcoming_booking.start_time.strftime("%B %d, %Y") %></h5>
            <h4><%= @upcoming_booking.start_time.strftime("%I:%M %p") %></h4>
          </div>

          <div class="videocall text-center py-3">
            <button class="btn-flat"><%= link_to "Join Classroom", my_video_path(booking_id: @upcoming_booking.id)  %></button>
          </div>

        <% else %>
          <p>You do not have any upcoming lessons</p>
        <% end %>
      </div>
    </div>

    <div>
      <div class="bookings-card p-2 mb-4">
        <div class="text-center border-bottom pb-1 pt-3">
          <h2 class="">Upcoming Lessons</h2>
        </div>
        
        <% @upcoming_bookings.each do |booking| %>
          <% if booking.lesson.user == current_user %>
            <%# lessons I'm coaching %>
            <div class="booking-card-coach m-3">
              <p class="coaching-indicator">Coaching</p>
              <div class="d-flex justify-content-between">
                <img class="avatar-next-lessons" src=<%= booking.user.image %>>
                <div>
                  <p><strong><%= booking.user.first_name %></strong></p>
                  <p><%= booking.lesson.industry %></p>
                </div>
                <div>
                  <p><%= booking.start_time.strftime("%B %d, %Y") %></p>
                  <p><%= booking.start_time.strftime("%I:%M %p") %></p>
                </div>
                </div>
              </div>

          <% else %>
            <div class="booking-card m-3 d-flex justify-content-between">
            <%# lessons I'm taking %>
              <img class="avatar-next-lessons" src=<%= booking.lesson.user.image %>>
              <div>
                <p><strong><%= booking.lesson.user.first_name %> <%= booking.lesson.user.last_name %></strong></p>
                <p><%= booking.lesson.industry.capitalize %></p>
              </div>
              <div>
                <p><%= booking.start_time.strftime("%B %d, %Y") %></p>
                <p><%= booking.start_time.strftime("%I:%M %p") %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="bookings-card p-2 mb-4">
        <div class="text-center border-bottom pb-1">
          <h2 class="pt-3">Past Lessons</h2>
        </div>

        <%@past_bookings.each do |booking| %>
          <%#= render "bookings/past", booking: booking %>

          <% if booking.lesson.user == current_user %>
            <div class="booking-card-coach m-3">
              <div class="d-flex justify-content-between">
                <img class="avatar-next-lessons" src=<%= booking.user.image %>>
                <div>
                  <p><%= booking.user.first_name %></p>
                  <p><%= booking.lesson.industry %></p>
                </div>
                <div>
                  <p><%= booking.start_time.strftime("%B %d, %Y") %></p>
                  <p><%= booking.start_time.strftime("%I:%M %p") %></p>
                </div>
              </div>
              <div class="text-center">
                <% if booking.report == nil %>
                  <button><%= link_to "Create Report", new_booking_report_path(booking) %></button>
                <% else %>
                  <button><%= link_to "View Report", report_path(booking.report) %></button>
                <% end %>
              </div>
            </div>
            
          <% else %>
            <div class="booking-card m-3">
              <p><%= booking.lesson.user.first_name %></p>
              <p><%= booking.lesson.industry %></p>
              <p><%= booking.start_time.strftime("%B %d, %Y") %></p>
              <p><%= booking.start_time.strftime("%I:%M %p") %></p>
              <% if booking.report == nil %>
                <button><%= "No Report" %></button>
              <% else %>
                <button><%= link_to "View Report", report_path(booking.report) %></button>
              <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>