<h1>My Conversations</h1>

<%# This is a the data that will be used for the dasboard "menu" navbar  %>
<%= render 'my/menu' %>


<div class="conversations-container">
  <div class="contacts col-2">
    <ul>
      <% current_user.conversation_users.each do |user| %>
        <li><img class="avatar" style="height:40px; width:40px;" src="<%= user.image %>"/><%= link_to user.first_name, my_conversations_path(user_id: user.id) %><%= @message.content %></li>
      <% end %>
    </ul>
  </div>

  <div class="conversation col-8">
    <div class="recipient-card">
      <img class="avatar" style="height:80px; width:80px;" src="<%= @user.image %>"/>
      <div class="recipient-card-infos">
        <h2><%=@user.full_name %></h2>
        <p><%= @user.city %>, <%= @user.country_code %></p>
      </div>
    </div>
    
    <ul>
      <% @messages.each do |message| %>
        <li class="message"><p><%= message.sender.first_name %> : <%= message.content %></p></li>
      <% end %>
    </ul>

    <div class="message-form">
      <%= simple_form_for [@user, @message] do |f| %> 
        <%= f.input :content, placeholder: "Type message ..." %>
      <% end %>
    </div>
  </div>

  <div class="testing col-2">
    <p> Just some content for testing purposes </p>
  </div>
</div>

