<div class="card-product card-customize p-3">
  <div class="d-flex w-100">
    <div>
      <img class="avatar-square" style="height:100px; width:100px;" src="<%= lesson.user.image %>"/>
    </div>
    <div class="flex-grow-1 mr-3 mt-3 ml-4">
      <h4><strong> <%= lesson.user.first_name %> <%= lesson.user.last_name %> </strong></h4>
      <h5> <%= lesson.industry %> </h5>
    </div>
  </div>
  <div class="bio mt-2">
    <p> <%= lesson.user.bio&.truncate(85) %> </p>
  </div>
  <div class="card-product-infos mt-3">
    <div class="card-product-infos-stars">
      <p>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
      </p>
    </div>
    <div class="d-flex w-100">
      <div class="card-product-infos-price flex-grow-1">
        <p><strong><%= lesson.price_display %></strong></p>
      </div>
      <div class="card-product-infos-location">
        <p><%= lesson.user.city %>, <%= lesson.user.country_name %></p>
      </div>
    </div>
  </div>
  <div class="profile-view">
    <button type="button" class="btn btn-outline-warning btn-block" data-toggle="modal" data-target="#myModal<%= lesson.id %>">
      View Profile
    </button>
  </div>
</div>
