<div class="card-product card-customize">
  <div class="d-flex w-100">
    <div>
      <img class="avatar-square" style="height:100px; width:100px;" src="<%= lesson.user.image %>"/>
    </div>
    <div class="flex-grow-1 mr-3 mt-3 ml-4">
      <h2><strong> <%= lesson.user.first_name %> <%= lesson.user.last_name %> </strong></h2>
      <h3> <%= lesson.industry.capitalize %> </h3>
      <p> <%= lesson.user.bio %> </p>
    </div>
  </div>
  <div class="card-product-infos mt-3">
    <div>
      <span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
      </span>
    </div>
    <div class="d-flex w-100">
      <div class="flex-grow-1 mt-2">
        <span><%= lesson.price_display %></span>
      </div>
      <div class="mt-2">
        <span><%= lesson.user.city %>, <%= lesson.user.country_name %></span>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-outline-warning btn-block mt-2" data-toggle="modal" data-target="#myModal<%= lesson.id %>">
    View Profile
  </button>
</div>