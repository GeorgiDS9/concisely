                <%# if not lesson.no_of_stars.blank? %>
                  Star rating: <%#= product.no_of_stars %>
                <%# else %>
                  <%#= link_to 'Please add a Review',{ controller: 'reviews', action: 'new', id: product.id } %>
                <%# end %>
              </div> -->
              <br>
              <div class="booking">
                <h2><strong>Book Lesson</strong></h2>
                <hr>
                <label>From</label><br>
                <input type="date" id="start" name="booking-start"><br>
                <label>To</label><br>
                <input type="date" id="end" name="booking-end">
              </div>
              <br>
              <div id="contact">
                <h3><strong>Contact Coach</strong></h3>
                <input type="email" id="email" name="email" placeholder="Your email">
              </div>
            </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save Coach</button>
          </div>
        </div>
      </div>
    </div>
